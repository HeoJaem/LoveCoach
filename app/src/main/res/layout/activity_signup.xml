<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/edt_signUpTitle"
        android:layout_marginVertical="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="회원 가입"
        android:textStyle="bold"
        android:textSize="60dp"
        />

    <EditText
        android:layout_below="@+id/edt_signUpTitle"
        android:id="@+id/signUp_username"
        android:layout_centerHorizontal="true"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:hint="id"
        android:selectAllOnFocus="true"
        />

    <EditText
        android:layout_below="@+id/signUp_username"
        android:id="@+id/edt_signUpPassword"
        android:layout_centerHorizontal="true"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:hint="password"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        />

    <EditText
        android:layout_below="@+id/edt_signUpPassword"
        android:id="@+id/edt_signUpPasswordConfirm"
        android:layout_centerHorizontal="true"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:hint="password confirm"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        />

    <Button
        android:textStyle="bold"
        android:text="이전"
        android:id="@+id/btn_signUpPrev"
        android:layout_width="95sp"
        android:layout_height="50sp"
        android:layout_below="@+id/edt_signUpPasswordConfirm"
        android:layout_alignLeft="@+id/edt_signUpPasswordConfirm"
        android:layout_marginTop="4dp" />

    <Button
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:backgroundTint="@color/colorPrimary"
        android:text="확인"
        android:layout_alignRight="@+id/edt_signUpPasswordConfirm"
        android:layout_below="@+id/edt_signUpPasswordConfirm"
        android:id="@+id/btn_join"
        android:layout_width="95sp"
        android:layout_height="50sp"
        android:layout_marginTop="4dp" />
</RelativeLayout>